Buenos_Aires <- c(27, 5)
Edinburgh <- c(22,17)
New_York <- c(12, 0)
San_Francisco <- c(19,13)

# Create DataFrame
df <- data.frame(Buenos_Aires, Edinburgh, New_York, San_Francisco)
rownames(df) = c("Treated", "Untreated")
df = as.matrix(df)

# Print DataFrame
df

# Reshape data to long format
df_long <- melt(df, value.name = "Number")
colnames(df_long) = c("Treatment_status", "Site", "Number")

Set2 = brewer.pal(8, "Set2")
Selected_Set2 = Set2[1:2]
mycolors = Selected_Set2

ggplot(df_long, aes(x = Site, y = Number, fill = Treatment_status)) +
  geom_bar(stat = "identity", colour = "black") +
  scale_fill_manual(values = mycolors) +
  theme(axis.text.x = element_text(hjust = 0.5)) +
  labs(x = "Site", y = "Number", fill = "Treatment status") +
  scale_x_discrete(labels=c("Buenos Aires", "Edinburgh", "New York", "San Francisco"))

